<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApphotel.Views.Contratacaodahospedagem"
             Title="Contratacaodahospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource PrimaryDark}">

    <VerticalStackLayout VerticalOptions="Center"
        Padding="15"
        Spacing="20">

        <Label 
            Text="Cálculo da Diária"
            FontFamily="IndieFlowerRegular"
            FontSize="50"
            TextColor="{StaticResource Primary}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Border Stroke="LightGray" StrokeThickness="1" BackgroundColor="White" Padding="10" Margin="0,0,0,0">
            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:" />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" /> 

                    <Label Grid.Row="1" Grid.Column="0"
                            Text="Crianças:" />

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}" 
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                </Grid>

                <Label Text="Escolha sua suíte" />

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação" />

                <Border Padding="10"
                       Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" />
                        
                        <HorizontalStackLayout>
                            <Label Text="Check-in:" />
                            <DatePicker x:Name="dtpck_checkin"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-out:" />
                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                    
                </Border>

                <Button Text="Avançar" />

                <Button Text="Sobre"
                        BackgroundColor="{StaticResource Gray300}"
                        TextColor="{StaticResource Black}" 
                        VerticalOptions="EndAndExpand"
                        Clicked="Button_Sobre_Clicked"/>

            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>
</ContentPage>